<% provide(:title, @user.name) %>
<div class="row">
 <%= @user.name %> 
 
 <%= form_for(@book) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.number_field :isbn, placeholder: "CAdd isbn" %>
  </div>
  <%= f.submit "Add", class: "btn btn-large btn-primary" %>
<% end %>
  
  <aside>

  </aside>
  <div class="span8">
   <% if @user.books.any? %>
      <h3>Books (<%= @user.books.count %>)</h3>
      <ol class="books">
        <%= render @books %>
      </ol>
      <%= will_paginate @books %>
    <% end %>
  </div>
</div>
